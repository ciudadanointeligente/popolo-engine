<%= render partial: 'popolo/organizations/breadcrumb', locals: {object: @organization} %>

<section>
  <div class="media">
    <span class="pull-left">
      <% if @post.person && @post.person.image? %>
        <%= image_tag(@post.person.image, alt: '', class: 'media-object') %>
      <% end %>
    </span>
    <div class="media-body">
      <h1 class="media-heading">
        <%= @post.name %>
      </h1>
      <% if @post.person %>
        <%= @post.person.name %>
      <% end %>
    </div>
  </div>

  <% if @post.person && @post.person.summary? %>
    <p><%= @post.person.summary %></p>
  <% end %>

  <aside>
    <% if @post.person && @post.person.email? %>
      <p>Email: <%= mail_to @post.person.email %></p>
    <% end %>
    <%= render @post.addresses %>
  </aside>
</section>
